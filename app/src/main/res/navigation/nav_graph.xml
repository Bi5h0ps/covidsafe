<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashActivity">


    <activity
        android:id="@+id/splashActivity"
        android:name="com.cs446.covidsafe.ui.Splash.SplashActivity"
        android:label="activity_splash"
        tools:layout="@layout/activity_splash" >
        <action
            android:id="@+id/action_splashActivity_to_mainActivity"
            app:destination="@id/mainActivity" />
    </activity>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.cs446.covidsafe.ui.Main.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/vaccineLocationFragment"
        android:name="com.cs446.covidsafe.ui.Vaccines.VaccineLocation.VaccineLocationFragment"
        android:label="VaccineLocationFragment" />
    <fragment
        android:id="@+id/vaccineFragment"
        android:name="com.cs446.covidsafe.ui.Vaccines.VaccineFragment"
        android:label="VaccineFragment" />
    <fragment
        android:id="@+id/vaccineInfoFragment"
        android:name="com.cs446.covidsafe.ui.Vaccines.VaccineInfo.VaccineInfoFragment"
        android:label="VaccineInfoFragment" />
    <fragment
        android:id="@+id/vaccineAlertFragment"
        android:name="com.cs446.covidsafe.ui.Vaccines.VaccineAlert.VaccineAlertFragment"
        android:label="VaccineAlertFragment" />
    <fragment
        android:id="@+id/covidFragment"
        android:name="com.cs446.covidsafe.ui.Covid.CovidFragment"
        android:label="CovidFragment" />
    <fragment
        android:id="@+id/covidStatsFragment"
        android:name="com.cs446.covidsafe.ui.Covid.CovidStats.CovidStatsFragment"
        android:label="CovidStatsFragment" >
        <action
            android:id="@+id/action_covidStatsFragment_to_countryPickerFragment"
            app:destination="@id/countryPickerFragment" />
    </fragment>
    <fragment
        android:id="@+id/covidUpdatesFragment"
        android:name="com.cs446.covidsafe.ui.Covid.CovidUpdates.CovidUpdatesFragment"
        android:label="CovidUpdatesFragment" />
    <fragment
        android:id="@+id/covidInfoFragment"
        android:name="com.cs446.covidsafe.ui.Covid.CovidInfo.CovidInfoFragment"
        android:label="fragment_vaccine_info"
        tools:layout="@layout/fragment_vaccine_info" >
    </fragment>
    <fragment
        android:id="@+id/countryPickerFragment"
        android:name="com.cs446.covidsafe.ui.Covid.CovidStats.CountryPicker.CountryPickerFragment"
        android:label="country_picker_fragment"
        tools:layout="@layout/country_picker_fragment" >
        <argument
            android:name="countries"
            app:argType="string[]" />
    </fragment>
</navigation>