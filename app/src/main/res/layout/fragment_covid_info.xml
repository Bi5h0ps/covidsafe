<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Covid.CovidInfo.CovidInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/card_bg1"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COVID-NEWS"
                        android:textSize="@dimen/covid_info_title" />

                    <ListView
                        android:nestedScrollingEnabled="true"
                        android:id="@+id/covid_news_list"
                        android:fadeScrollbars="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                    </ListView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="News"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/covid_info_sub_title"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/card_bg2"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Travel Restriction"
                            android:textSize="@dimen/covid_info_title" />

                        <Spinner
                            android:id="@+id/country_selection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/travel_restriction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/covid_info_text"
                        android:text="Please choose a country to begin" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travel"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/covid_info_sub_title"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/card_bg2"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    android:layout_height="400dp"
                    android:scrollbarFadeDuration="0"
                    android:id="@+id/FAQ">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            app:cardBackgroundColor="#7fffd4"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="20dp"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="What is COVID19?"
                                        android:textSize="@dimen/covid_info_title" />

                                    <ImageButton
                                        android:id="@+id/expandCovidInfoButton"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="8"
                                        android:background="@null"

                                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/covid_facts"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/covid_information"
                                    android:textSize="@dimen/covid_info_text"
                                    android:visibility="gone" />

                                <Button
                                    android:id="@+id/who_web_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="Learn more from WHO"
                                    android:textSize="@dimen/covid_info_sub_title"
                                    android:visibility="gone"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            app:cardBackgroundColor="#7fffd4"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="20dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="How is COVID-19 transmitted?"
                                        android:layout_weight="1"
                                        android:textSize="@dimen/covid_info_title" />
                                    <ImageButton
                                        android:id="@+id/expandTransmissionInfoButton"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:layout_weight="8"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/transmission"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/covid_transmission_information"
                                    android:textSize="@dimen/covid_info_text"
                                    android:visibility="gone" />

                                <Button
                                    android:id="@+id/covid_stats"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:background="@android:color/white"
                                    android:text="COVID STATS"
                                    android:textSize="@dimen/covid_info_sub_title" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            app:cardBackgroundColor="#7ffff4"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="20dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="What are the symptoms of COVID-19?"
                                        android:layout_weight="1"
                                        android:textSize="@dimen/covid_info_title" />

                                    <ImageButton
                                        android:id="@+id/expandSymptomsInfoButton"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:layout_weight="8"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                                </LinearLayout>

                                <TextView

                                    android:id="@+id/symptom1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="The most common symptoms of COVID-19 are:"
                                    android:textSize="@dimen/covid_info_sub_title"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/symptom2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/covid_common_symptoms"
                                    android:textSize="@dimen/covid_info_text"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/symptom3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="Symptoms of severe COVID‐19 disease include:"
                                    android:textSize="@dimen/covid_info_sub_title"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/symptom4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/covid_severe_symptoms"
                                    android:textSize="@dimen/covid_info_text"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            app:cardBackgroundColor="#7fffd4"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="20dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="When should I get a test for COVID-19?"
                                        android:textSize="@dimen/covid_info_title" />

                                    <ImageButton
                                        android:id="@+id/expandTestInfoButton"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:layout_weight="8"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                                </LinearLayout>


                                <TextView
                                    android:id="@+id/testinfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/covid_test_information"
                                    android:textSize="@dimen/covid_info_text"
                                    android:visibility="gone" />

                                <Button
                                    android:id="@+id/covid_updates_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:text="COVID UPDATES" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/covid_info_sub_title"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>